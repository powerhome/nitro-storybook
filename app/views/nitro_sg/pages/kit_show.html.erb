<%= pb_rails("heading", props: { text: pb_title(@kit), tag: "h1", size: "1" }) %>

<div class="pb--kit-type-nav">
  <a href="<%= kit_show_rails_path(@kit) %>" class="<%= 'active' if action_name == "kit_show_rails" %>">Rails</a>
  <a href="<%= kit_show_reacts_path(@kit) %>" class="<%= 'active' if action_name == "kit_show_react" %>">React</a>
</div>

<% if(action_name == "kit_show_rails") %>
  <%= pb_kit(kit: @kit) %>
<% else %>
  <%= pb_kit(kit: @kit, type: "react") %>
<% end %>
