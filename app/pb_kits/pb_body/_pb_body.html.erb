<%
  data ||= {}
  color = data.fetch(:color, '')
  color = color.length > 0 ? "-#{color}" : ''
  dark = data.fetch(:dark, false)
  dark = dark ? "-dark" :  ''
  tag = data.fetch(:tag, 'p')
  text = data.fetch(:text, 'I am a pb_body paragraph')
%>

<%= content_tag(:"#{tag}", text, class: "body#{color}#{dark}") %>
