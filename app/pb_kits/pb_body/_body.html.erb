<%
  props ||= {}
  color = props.fetch(:color, '')
  color = color.length > 0 ? "-#{color}" : ''
  dark = props.fetch(:dark, false)
  dark = dark ? "-dark" :  ''
  tag = props.fetch(:tag, 'p')
  text = props.fetch(:text, 'I am a body paragraph')
%>

<%= content_tag(:"#{tag}", text, class: "body#{color}#{dark}") %>
