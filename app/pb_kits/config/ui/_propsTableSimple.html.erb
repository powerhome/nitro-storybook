<%
  component_props.delete(:show_props)
  component_props ||= nil
%>

<% if( !component_props.nil? && !component_props.empty? ) %>
  <div class="pb--propsTable">
    <h2>Props</h2>
    <table class="pb--propsTable--table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Example Value</th>
        </tr>
      </thead>
      <tbody>
        <% component_props.each_with_index do |(key,value),index| %>
          <tr>
            <td><%= key %></td>
            <td><%= value %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
