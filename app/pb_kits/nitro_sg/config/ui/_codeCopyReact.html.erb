<% component_props ||= nil %>

<% if( !component_props.nil? ) %>
  <div id="pb--codeRails" class="pb--codeCopy">
    <span class="pb--codeCopy--title">React-Rails Helper</span>
    <%= pb_react_snippet(component_name, component_props) %>
  </div>
  <div id="pb--codeRails" class="pb--codeCopy">
    <span class="pb--codeCopy--title">React JSX</span>
    <%= pb_react_snippet_standard(component_name, component_props) %>
  </div>
  <div class="pb--propsTable">
    <%= render(partial: "nitro_sg/config/ui/propsTableSimple", locals: {component_props: component_props}) %>
  </div>
<% end %>
